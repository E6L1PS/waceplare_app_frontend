<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray">


    <ImageView
        android:id="@+id/iv_my_ad"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_my_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_my_ad"
        tools:text="4 000 Р" />

    <TextView
        android:id="@+id/tv_my_title"
        android:layout_width="201dp"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/iv_my_ad"
        app:layout_constraintTop_toBottomOf="@id/tv_my_price"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        tools:text="sampletextsampletextsampletextsampletextsampletextsampletextsampletextsampletextsampletextsampletextsampletextsampletext" />

    <TextView
        android:id="@+id/tv_state_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/iv_my_ad"
        app:layout_constraintBottom_toBottomOf="@id/iv_my_ad"
        tools:text="Опубликовано" />

    <ImageView
        android:id="@+id/iv_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:clickable="true"
        android:focusable="true"
        android:minWidth="48dp"
        android:minHeight="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pancil_ic"
        tools:ignore="SpeakableTextPresentCheck" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/iv_my_ad"
        app:layout_constraintTop_toBottomOf="@id/tv_state_ad">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/eye_ic"
            android:gravity="bottom" />

        <TextView
            android:id="@+id/tv_views"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            tools:text="123"
            android:gravity="center"
            android:paddingStart="5dp"
            android:paddingEnd="10dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/person_ic" />

        <TextView
            android:id="@+id/tv_contacts"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            tools:text="123"
            android:gravity="center"
            android:paddingStart="5dp"
            android:paddingEnd="10dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/favorite_ic" />

        <TextView
            android:id="@+id/tv_favorites"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            tools:text="123"
            android:gravity="center"
            android:paddingStart="5dp"
            android:paddingEnd="10dp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>